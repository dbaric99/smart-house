{
  "ConnectionStrings": {
    "DefaultConnection": "data source=db,1433;persist security info=False;Initial Catalog=smarthouse_db;User ID=sa;Password=MyPassword001"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
      "MinimumLevel": {
          "Default": "Debug",
          "Override": {
              "Microsoft": "Warning",
              "System": "Warning",
              "Microsoft.AspNetCore.Authentication": "Information"
          }
      },
      "Enrich": [ "FromLogContext" ],
      "WriteTo": [
          {
              "Name": "Console",
              "Args": {
                  "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                  "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext} {Message:lj}{NewLine}{Exception}{NewLine}"
              }
          },
          {
              "Name": "File",
              "Args": {
                  "path": "smarthouse-gateway.log",
                  "rollOnFileSizeLimit": true,
                  "fileSizeLimitBytes": 1000000
              }
          }
      ]
  }
}
